@using HairSalon.Models;
@using System;
@using System.Collections.Generic;

@{
    Layout = "_Layout";
}

<h1>List of clients</h1>

@if(Model.Count < 1)
{
    <p>There are no clients to display!</p>
}
else
{
    
    
        @foreach(Client client in Model)
        {  
            <br>
            @client.GetName()<br>
            @client.GetDetails()<br>
            @client.GetAppointment()<br>
            <br>
            <br>
        }
    
}
